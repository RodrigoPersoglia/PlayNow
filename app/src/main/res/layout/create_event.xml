<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:background="@android:color/transparent"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"

        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        app:icon="@drawable/ic_arrow_back_foreground"
        app:iconGravity="start"
        app:iconPadding="0dp"
        app:iconSize="40dp"
        app:iconTint="#020202" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Crear Evento"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Evento"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp">
        <EditText
            android:id="@+id/txt_nombreEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingTop="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad de Jugadores"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp">
        <EditText
            android:id="@+id/radio_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:paddingTop="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Seleccionar Deporte"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp">
        <AutoCompleteTextView
            android:id="@+id/select_sportsEvent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="none"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:gravity="left" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Seleccionar Fecha">
            <EditText
                android:id="@+id/date_CalendarEvent"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:clickable="true"
            android:focusable="false"
            android:paddingTop="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/image_calendar"
            android:layout_width="74dp"
            android:layout_height="58dp"
            android:backgroundTint="@color/transparent"
            android:padding="15dp"
            app:cornerRadius="10dp"
            app:icon="@drawable/calendar"
            app:iconSize="50dp"
            app:iconTint="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Seleccionar Hora">

            <EditText
                android:id="@+id/time_Event"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:clickable="true"
                android:focusable="false"
                android:paddingTop="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/image_time"
            android:layout_width="73dp"
            android:layout_height="58dp"
            android:backgroundTint="@color/transparent"
            android:drawableEnd="@android:drawable/ic_menu_recent_history"
            android:padding="13dp"
            android:paddingBottom="0dp"
            app:cornerRadius="10dp"
            app:icon="@drawable/timer"
            app:iconSize="55dp"
            app:iconTint="@color/black" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/botonSeleccionarUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_localization"
            android:drawableTint="@color/white"
            android:text="Seleccionar UbicaciÃ³n"
            app:cornerRadius="10dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <Button
            android:id="@+id/search_event_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear"
            app:cornerRadius="10dp" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>